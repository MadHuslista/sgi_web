{% extends "base.twig" %}
{% block title %}Memorias{% endblock %}
{% block contentheader %}Memorias{% endblock %}
{% block content %}


		<section class="content">
			<div class="row">
				<section class="col-lg-12 connectedSortable">
				<div class="box box-success">
					<div class="box-header">

								<div class="col-xs-9">
									<div class="form-group">
										<label class="col-sm-2 control-label" style="padding-left:0px;">Ordenar por:</label>

										<div class="col-sm-4">
											<select id="filtro" name="filtro" class="form-control">
											 	<option value="anio">Empresa</option>
											 	<option value="autor">Periodo</option>
											 	<option value="titulo">Contacto</option>
											</select>
										</div>

										<div class="col-sm-4">
											<select id="ordenfiltro" name="ordenfiltro" class="form-control">
											 	<option value="asc">Menor a Mayor</option>
											 	<option value="desc">Mayor a menor</option>
											</select>
										</div>

										<div class="col-sm-2">
											<button class="btn btn-block btn-default">Ordenar</button>
										</div>

									</div>
								</div>

								<div class="col-xs-3">
									<div class="input-group input-group-sm">
				            			<input type="text" class="form-control" placeholder="" id="s" name="s">
				                		<span class="input-group-btn">
				                  			<button class="btn btn-info btn-flat" id="buscar" type="button"><i class="fa fa-search"></i> Buscar</button>
				                		</span>
				          			</div>
								</div>


							  <div class="col-lg-12">
							  <br>
									<table class="table table-bordered table-hover" id="tabla">
										<thead>
												<tr>
													<th style="vertical-align: middle;">Fecha</th>
													<th style="vertical-align: middle;">Nombre</th>
													<th style="vertical-align: middle;">Apellido</th>
													<th style="vertical-align: middle;">Tema</th>
													<th style="vertical-align: middle;">Profesor Guía</th>
													<th style="vertical-align: middle;">Empresa</th>
													<th style="vertical-align: middle;">Título al que Opta</th>
												</tr>
										</thead>
										<tbody>

											{% for p in datos %}
													<tr>
													<td>{{ p.anio }} </td>
													<td>{{ p.nombre }} </td>
													<td>{{ p.apellido }}</td>
													<td>{{ p.tema }}</td>
													<td>{{ p.profesor }}</td>
													<td>{{ p.empresa }}</td>
													<td>{{ p.plan }}</td>
													</tr>
											{% endfor %}
										</tbody>
									</table>
									<div class="row">
											<div class="col-xs-3">
												 <button class="btn btn-block btn-primary" style="margin-left: 450px;"  id="exportar_tabla"><i class="fa fa-table"></i> Exportar Tabla</button>
											</div>
									</div>
							</div>
						</div>
					</div>
					</section><!-- /.content -->
			</div>
		</section><!-- /.content -->

		<input id="csrf" type="hidden" name="{{csrf_key}}" value="{{csrf_token}}">
{% endblock %}
{% block scripts %}
<script src="{{ baseUrl() }}/js/xlsx.core.min.js"></script>
<script src="{{ baseUrl() }}/js/Blob.js"  type="text/javascript"></script>
<script src="{{ baseUrl() }}/js/FileSaver.js"  type="text/javascript"></script>
<script src="{{ baseUrl() }}/js/tabla.js"  type="text/javascript"></script>
<script src="{{ baseUrl() }}/js/bootstrap-datepicker.js"></script>
<script src="{{ baseUrl() }}/js/jquery.table2excel.js"></script>
<script src="{{ baseUrl() }}/js/ChartNew.js"></script>
<script>

$("#exportar_tabla").on('click', function(){
			window.location.href = "{{ baseUrl() }}/excelMemoriasRealizadas";
	});
</script>

{% endblock %}