{% extends "base.twig" %}
{% block title %}Detalles Publicación{% endblock %}
{% block contentheader %}Detalles Publicación{% endblock %}
{% block content %}

		<section class="content">
			<!-- Main row -->
			<div class="row">
				<!-- Left col -->
				<section class="col-lg-12 connectedSortable">
					<div class="box box-success">
						<div class="box-header">
							
							<div class="box-tools pull-right" data-toggle="tooltip" title="Status">
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12" style="padding-left:25px;">
								<p><strong>Título: </strong>{{publicacion.titulo}}</p>
								<p><strong>Año: </strong>{{publicacion.anio}}</p>
								<!--p><strong>Tipo de publicación: </strong>{{publicacion.type}}</p-->
								<p><strong>Volumen: </strong>{{publicacion.volumen}}</p>
								<!--p><strong>Páginas: </strong>{{publicacion.paginas}}</p>
								<!--p><strong>DOI: </strong>{{publicacion.doi}}</p-->
								<!--p><strong>Editorial: </strong>{{publicacion.editorial}}</p-->
								<!--p><strong>Indexación: </strong>{{publicacion.indexation}}</p-->
								<!--p><strong>Proyecto Asociado: </strong>{{publicacion.a_project}}</p-->
								<!--p><strong>Palabras Claves: </strong>{{publicacion.keyword}}</p-->
								<h3>Autores</h3>
								<p><strong>Autor Principal: </strong><a href="{{ siteUrl('/perfil/autor/')}}{{ publicacion.profesor }}">{{publicacion.nombre}} {{publicacion.apellido_p}} {{publicacion.apellido_m}}</a></p>
								<p><strong>Autores Secundarios: </strong>{% for ca in secundarios %}<a href="#">{{publicacion.otros_autores}}</a>, {% endfor %}</p>


								<h3>Revista</h3>
								
								<p><strong>Nombre: </strong>{{publicacion.revista}} </p>
								<!--p><strong>País: </strong>{{journal.country}} </p>
								<p><strong>Publicador: </strong>{{journal.publisher_name}} </p-->
				
					
							</div>
						</div>
					</div>
				</section><!-- /.Left col -->
				<!-- right col (We are only adding the ID to make the widgets sortable)-->
			</div><!-- /.row (main row) -->

		</section><!-- /.content -->
{% endblock %}
