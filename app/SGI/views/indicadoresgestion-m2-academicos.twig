{% extends "base.twig" %}
{% block title %}M2 Instalaciones Académicas{% endblock %}
{% block contentheader %}M2 Instalaciones Académicas{% endblock %}
{% block content %}

		<section class="content">
			<div class="row">
				<section class="col-lg-12 connectedSortable">
					<div class="box box-success">
          <br>
            <h4><b><center>Instalaciones Académicas</center></b></h4>
				    <br>
							<canvas id="canvas" height="500" width="1500"></canvas>	
               <br>	


						<div class="box-header">

              <div class="col-xs-4" style="margin-left: 400px;">
             <button class="btn btn-block btn-primary" id="exportar_grafico" style="margin-top: 20px;"><i class="fa fa-area-chart"></i> Exportar Gráfico</button>

             </div>
                    <br>
				  			<div class="col-lg-12">
								<br>

								<table data-count="{{ count }}" id="publicaciones" class="table table-bordered table-hover">
									<thead>
										<tr>
											<th>Año</th>
											<th>Campus</th>
											<th>Metros cuadrados</th>
											<th>Tipo Instalación</th>
										</tr>
									</thead>
									<tbody>
										{% for p in datos %}
										<tr>
											<td>{{ p.anio }} </td>
											<td>{{ p.campus }}</td>
											<td>{{ p.metros_cuadrados }}</td>
											<td>{{ p.tipo }}</td>
										</tr>
										{% endfor %}
									</tbody>
								</table>

								<div class="row">
									<div class="col-xs-4" style="margin-left: 400px;">
										<button class="btn btn-block btn-primary" id="exportar_tabla"><i class="fa fa-table"></i> Exportar Tabla</button>
									</div>		
								</div>
									
							</div>
						</div>
					</div>
				</section>
			</div>
		</section><!-- /.content -->
    <div style="font-size:0;height:200px;"></div>


    <input id="csrf" type="hidden" name="{{csrf_key}}" value="{{csrf_token}}">



{% endblock %}
{% block scripts %}
<script src="{{ baseUrl() }}/js/ChartNew.js"></script>
<script src="{{ baseUrl() }}/js/jquery.redirect.js"></script>
<script src="{{ baseUrl() }}/js/xlsx.core.min.js"></script>
<script src="{{ baseUrl() }}/js/Blob.js"  type="text/javascript"></script>
<script src="{{ baseUrl() }}/js/FileSaver.js"  type="text/javascript"></script>
<script src="{{ baseUrl() }}/js/tabla.js"  type="text/javascript"></script>
<script src="{{ baseUrl() }}/js/jquery.table2excel.min.js"></script>



<script>


$(document).ready(function () {

	var data = {
        csrf_token: $("#csrf").val(),
    }

	 $.ajax({
            type: "get",
            url:"/ajax/buscarM2InstalacionesAcademicasLab",
            data: data,
            success: function(val){

            	datos = jQuery.parseJSON(val);
              MostrarGraficoLab(datos);
                
            }
     });

     return false;


});

var formatNumber = {
 separador: ".", // separador para los miles
 sepDecimal: ',', // separador para los decimales
 formatear:function (num){
  num +='';
  var splitStr = num.split('.');
  var splitLeft = splitStr[0];
  var splitRight = splitStr.length > 1 ? this.sepDecimal + splitStr[1] : '';
  var regx = /(\d+)(\d{3})/;
  while (regx.test(splitLeft)) {
  splitLeft = splitLeft.replace(regx, '$1' + this.separador + '$2');
  }
  return this.simbol + splitLeft  +splitRight;
 },
 new:function(num, simbol){
  this.simbol = simbol ||'';
  return this.formatear(num);
 }
}

function MostrarGraficoLab(data){

dataLab =[];
  for (i = 0; i < datos.length; i++) { 
    dataLab[i] = datos[i].m2;
}

anios =[];
  for (i = 0; i < datos.length; i++) { 
    anios[i] = datos[i].anio;
}


	 $.ajax({
            type: "get",
            url:"/ajax/buscarM2InstalacionesAcademicasDoc",
            data: data,
            success: function(val){

            	  datos = jQuery.parseJSON(val);

                dataDoc =[];
                  for (i = 0; i < datos.length; i++) { 
                      dataDoc[i] = datos[i].m2;
                  }
                

            
                var myBarChart1;
                var label = ['Laboratorios', 'Docentes']
                var data1 = 
                {
                    labels: anios,
                    datasets: 
                    [
                      {
                        label: label[0],
                        fillColor: "#ff9c43",
                        strokeColor: "rgba(220,220,220,0.8)",
                        highlightFill: "rgba(220,220,220,0.75)",
                        highlightStroke: "rgba(220,220,220,1)",
                        data: dataLab
                      },
                      {
                          label: label[1],
                          fillColor: "#ffc999",
                          strokeColor: "rgba(220,220,220,0.8)",
                          highlightFill: "rgba(220,220,220,0.75)",
                          highlightStroke: "rgba(220,220,220,1)",
                          data: dataDoc
                      }
                    ]
                 }    

                 var ctx1 = $("#canvas").get(0).getContext("2d");
                 myBarChart1 = new Chart(ctx1).Bar(data1, {
                    responsive: true,
                    bezierCurve : false,
                    datasetFill : false,

                    scaleOverride : true,
                    scaleSteps : 5,
                    scaleStepWidth : Math.ceil(Math.max.apply(Math,[Math.max.apply(Math,data1.datasets[0].data),Math.max.apply( Math,data1.datasets[1].data)])/5),
                    scaleStartValue : 0 ,

                    legend : true,
                    savePng : true,
                    savePngOutput: "Save",
                    xAxisLabel: "Años",
                    yAxisLabel: "Metros Cuadrados",
                    annotateDisplay : true,
                    annotateLabel: "<%= v1 %> - <%= formatNumber.new(v3) %>",
                });     
         }
     });

    
  

}


$("#exportar_grafico").on('click', function(){
  $.ajax({
    url:'../api/save_canvas',
    type:'POST',
    data:{
      data:document.getElementById("canvas").toDataURL("image/png"),
      csrf_token: $("#csrf").val()
    }
  }).success(function(data){
    var a = document.createElement('a');
    a.href = "../img/grafico.png";
    a.download = "M2_Instalaciones_Académicas.png";
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
  });
});



$("#exportar_tabla").on('click', function(){
		window.location.href = "{{ baseUrl() }}/excelListarM2Academicos";
		
});

$("#buscar").on('click',function(){
		$.redirect("../programa/listar-publicaciones",{ s: $('#s').val()}, 'GET');
});

$("#s").keypress(function(event){
	var keycode = (event.keyCode ? event.keyCode : event.which);
	if(keycode == '13'){
		$.redirect("../programa/listar-publicaciones",{ s: $('#s').val()}, 'GET');
	}
	event.stopPropagation();
});

</script>

{% endblock %}
